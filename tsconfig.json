{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "typeRoots": ["./typings", "./node_modules/"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"],
  }
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts"],
}
