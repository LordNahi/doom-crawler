{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "typeRoots": ["@types", "./node_modules/"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"],
    },
  },
  "include": ["src/**/*.ts", "@types/**/*.d.ts"],
}
