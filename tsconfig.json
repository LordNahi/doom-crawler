    "target": "es5",
    "module": "esnext",
    "strict": true,
    "typeRoots": [
      "./typings",
      "./node_modules/"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
}